<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="@drawable/bestbackgound"
    tools:context="com.example.bilal.findfastestambulance.SigninActivity">

    <RelativeLayout
        android:layout_width="387dp"
        android:layout_height="515dp"
        android:layout_weight="10"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/userNametxt"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:hint="Enter User Name"
            android:textSize="25dp"
            android:inputType="textPersonName"
            android:textColor="@color/colorGreen"
            android:textColorHint="@color/colorGreen"
            android:imeOptions="actionNext"
            android:layout_above="@+id/passwordtxt"
            android:layout_alignLeft="@+id/passwordtxt"
            android:layout_alignStart="@+id/passwordtxt" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:hint="Enter Password"
            android:textSize="25dp"
            android:textColor="@color/colorGreen"
            android:textColorHint="@color/colorGreen"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:layout_above="@+id/GoogleSignInbtn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="145dp"
            android:id="@+id/passwordtxt" />

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/login"
            android:id="@+id/loginBtn"
            android:layout_below="@+id/userNametxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="59dp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/GoogleSignInbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="97dp" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3834585426199180/1552701152" />

    </RelativeLayout>
</LinearLayout>
