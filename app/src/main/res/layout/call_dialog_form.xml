<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_weight="1"
        android:text="Nearest Ambulance From You"
        android:background="@drawable/back"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorGreen"
        android:layout_weight="1"
        android:id="@+id/txtmsg"
        android:background="@drawable/back"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

     <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:padding="5dp"
         android:orientation="vertical"
         android:layout_weight="2"
         android:background="@drawable/back">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="25dp"
             android:text="Call to Driver"
             android:textColor="@color/colorGreen"/>

        <TextView
            android:id="@+id/driverinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/colorGreen"/>

        </LinearLayout>
        <ImageButton
            android:id="@+id/driverbtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_settings_phone_black_24dp"
            android:layout_gravity="right"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="5dp"
        android:background="@drawable/back">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:background="@drawable/back"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Call to Company"
                android:textColor="@color/colorGreen"/>

            <TextView
            android:id="@+id/companyinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/colorGreen"/>

        </LinearLayout>
        <ImageButton
            android:id="@+id/companybtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_settings_phone_black_24dp"
            android:layout_gravity="right"
            android:padding="5dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorGreen"
        android:text="Cancel"
        android:textColor="@color/colorwhite"
        android:textSize="25dp"
        android:textStyle="bold" />
</LinearLayout>